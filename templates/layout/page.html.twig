<div class="layout-container">

  <div class="container">
    {{ include ('drupal4gov:header', {
      main_menu: page.header.drupal4gov_main_menu,
      show_wide_logo: not is_front,
      show_blob: is_front,
      }, with_context = false) }}

      {% if is_front %}
        <div class="component-spacing">
          {{ include('@drupal4gov/../components/hero/hero.example.twig') }}
        </div>
        <div class="component-spacing">
          {{ include('@drupal4gov/../components/card-group/card-group.example-icons.twig') }}
        </div>
        <div class="component-spacing">
          {{ include('@drupal4gov/../components/heading/heading.example.twig') }}
        </div>
        <div class="component-spacing">
          {{ include('@drupal4gov/../components/card-group/card-group.example-cards.twig') }}
        </div>
      {% endif %}
  </div>

  <div class="container">
    {{ page.breadcrumb }}

    {{ page.highlighted }}

    {{ page.help }}
  </div>

  <main class="container" role="main">
    <a id="main-content" tabindex="-1"></a>

    {{ page.content }}
  </main>

  {% embed 'drupal4gov:footer' with {
    footer_menu: page.footer.drupal4gov_footer,
  } %}
  {% endembed %}

</div>
